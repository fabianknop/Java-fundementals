package gameOfLife;

import java.awt.Color;
import java.awt.GridLayout;
import java.util.Observable;
import java.util.Observer;

import javax.swing.JButton;
import javax.swing.JPanel;

public class LifePanelView extends JPanel implements Observer{
	LifeModel model; 
	public boolean[][] grid;
	
	public LifePanelView(LifeModel model){
		this.model = model;
		model.addObserver(this);
		setLayout( new GridLayout( 20, 30 ) );
		refresh();	
	}
	
	public void displayCel(int row, int column){
		JButton cel = new JButton();
		if(model.isLevend(row, column)){			
			cel.setBackground(Color.white);
		} else cel.setBackground(Color.black);;
		add(cel);
	}
	
	private void refresh(){
		grid = model.getGrid();
		for(int i = 0; i < 20; i++){
			for(int j = 0; j < 30; j++){
				displayCel(i,j);
			}
		}
	}
	
	@Override
	public void update(Observable arg0, Object arg1) {
		refresh();		
	}
}
