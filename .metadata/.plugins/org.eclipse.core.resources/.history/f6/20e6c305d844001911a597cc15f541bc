package gameOfLife;

import java.util.Scanner;

import javax.swing.JFrame;
import javax.swing.Timer;

public class LifeApplication extends JFrame{
	
	public LifeApplication() {
		LifeModel lifemodel = new LifeModel();
		this.setTitle( "Game of Life" );
		this.setLayout(null);
		this.add(new LifePanelView(lifemodel));
		setBounds( 200, 200, 700, 700 );
		setDefaultCloseOperation( JFrame.EXIT_ON_CLOSE );
		setVisible( true );
		
		new LifeConsoleView(lifemodel);
		lifemodel.toon();
		Timer tick = new Timer( 1000, new LifeController( lifemodel ) );
		tick.start();		
		WaitForEnter();
	}

	public static void main(String[] args) {
		new LifeApplication();
	}
	
	private static void WaitForEnter() {
		new Scanner(System.in).nextLine();
		System.exit(0);
	}
}
